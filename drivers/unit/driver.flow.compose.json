{
	"triggers": [{
			"$extends": "measure_heap_changed"
		},
		{
			"$extends": "measure_idle_time_changed"
		},
		{
			"$extends": "measure_load_changed"
		},
		{
			"$extends": "measure_ram_changed"
		},
		{
			"$extends": "measure_signal_strength_changed"
		},
		{
			"$extends": "measure_uptime_changed"
		},
		{
			"id": "unit_rebooted",
			"title": {
				"en": "Unit rebooted",
				"nl": "Unit herstart"
			},
			"hint": {
				"en": "Triggers when reported uptime is lower then last reported uptime. (Doesn't detect a reboot that occurs within one minute of last boot.)",
				"nl": "Activeert wanneer de uptime lager is dan de laatste bekende uptime. (Kan geen reboot detecteren dat binnen 1 minuut van opstarten plaatsvind)"
			},
			"tokens": [{
					"name": "reset_reason",
					"type": "string",
					"title": {
						"en": "Reboot reason",
						"nl": "Reden herstart"
					},
					"example": "Software/System restart"
				},
				{
					"name": "boot_reason",
					"type": "string",
					"title": {
						"en": "Boot reason",
						"nl": "Reden herstart"
					},
					"example": "Manual reboot"
				}
			]
		},
		{
			"id": "unit_reconnected",
			"title": {
				"en": "Unit WiFi reconnected",
				"nl": "Unit WiFi opnieuw verbonden"
			},
			"tokens": [{
					"name": "milliseconds_ago",
					"type": "number",
					"title": {
						"en": "Milliseconds ago",
						"nl": "Milliseconden geleden"
					},
					"example": 784
				},
				{
					"name": "reconnects_number",
					"type": "number",
					"title": {
						"en": "Total number of reconnects",
						"nl": "Totaal aantal verbrekingen"
					},
					"example": 3
				},
				{
					"name": "disconnect_reason_number",
					"type": "number",
					"title": {
						"en": "Disconnect reason",
						"nl": "Reden verbreking"
					},
					"example": 2
				},
				{
					"name": "disconnect_reason_string",
					"type": "string",
					"title": {
						"en": "Disconnect reason",
						"nl": "Reden verbreking"
					},
					"example": "(2) Previous authentication no longer valid"
				}
			]
		}
	],
	"actions": [{
			"id": "send_custom_command",
			"title": {
				"en": "Send command"
			},
			"args": [{
				"type": "text",
				"name": "command_string",
				"placeholder": {
					"en": "ESP Easy command, will be send through HTTP",
					"nl": "ESP Easy commando, wordt verzonden via HTTP"
				}
			}]
		},
		{
			"id": "start_event",
			"title": {
				"en": "Start event"
			},
			"args": [{
				"type": "text",
				"name": "event_name",
				"placeholder": {
					"en": "Event name",
					"nl": "Event naam"
				}
			}]
		},
		{
			"id": "start_event_with_parameter",
			"title": {
				"en": "Start event (with parameter)"
			},
			"args": [{
					"type": "text",
					"name": "event_name",
					"placeholder": {
						"en": "Event name",
						"nl": "Event naam"
					}
				},
				{
					"type": "text",
					"name": "event_parameter",
					"placeholder": {
						"en": "Event parameter"
					}
				}
			]
		},
		{
			"id": "set_task_value",
			"title": {
				"en": "Set task value"
			},
			"args": [{
					"type": "autocomplete",
					"name": "task_value_name",
					"placeholder": {
						"en": "Value name or ID",
						"nl": "Value naam of ID"
					}
				},
				{
					"type": "text",
					"name": "task_new_value",
					"placeholder": {
						"en": "New value",
						"nl": "Nieuwe waarde"
					}
				}
			]
		},
		{
			"id": "run_task",
			"title": {
				"en": "Run (update) task"
			},
			"args": [{
				"type": "autocomplete",
				"name": "task_name",
				"placeholder": {
					"en": "Task name or ID",
					"nl": "Task naam of ID"
				}
			}]
		}
	]
}
